{
  "name": "kogg.github.io",
  "version": "1.0.0",
  "scripts": {
    "deploy": "git subtree push --prefix=dist origin master",
    "start": "foreman start",
    "browserify": "mkdir -p dist/js && browserify www/js/main.js --debug --verbose | exorcist dist/js/main.compiled.js.map > dist/js/main.compiled.js",
    "clean": "rm -rf dist/*",
    "copy": "cp -r www/* dist/",
    "cssfmt": "cssfmt www/css/main.css && git add www/css/main.css",
    "git:add": "git add dist",
    "postcss": "mkdir -p dist/css && postcss -c postcss.js -o dist/css/main.css www/css/main.css",
    "postcss:watch": "mkdir -p temp/css && postcss -c postcss.js -o temp/css/main.css www/css/main.css -w",
    "sorcery": "sorcery -i dist/js/main.minified.js -o dist/js/main.js && rm dist/js/main.*.js*",
    "uglify": "uglifyjs dist/js/main.compiled.js -o dist/js/main.minified.js --in-source-map dist/js/main.compiled.js.map --source-map dist/js/main.minified.js.map --source-map-root ../.. -p relative -c drop_console,warnings=false --stats",
    "watchify": "mkdir -p temp/js && watchify www/js/main.js -o temp/js/main.js --debug --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kogg/kogg.github.io.git"
  },
  "author": {
    "name": "kogg",
    "email": "team@instantlogosearch.com",
    "url": "http://ko.gg"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kogg/kogg.github.io/issues"
  },
  "homepage": "https://github.com/kogg/kogg.github.io#readme",
  "pre-commit": [
    "cssfmt",
    "clean",
    "copy",
    "postcss",
    "browserify",
    "uglify",
    "sorcery",
    "git:add"
  ],
  "devDependencies": {
    "cssfmt": "^2.1.5",
    "pre-commit": "^1.1.2"
  },
  "dependencies": {
    "autoprefixer": "^6.2.2",
    "browserify": "^13.0.0",
    "cssnano": "^3.4.0",
    "exorcist": "^0.4.0",
    "express": "^4.13.4",
    "postcss-cachebuster": "^0.1.2",
    "postcss-cli": "^2.5.1",
    "postcss-import": "^8.0.2",
    "postcss-import-url": "^1.0.0",
    "postcss-mq-keyframes": "^0.2.5",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^1.3.0",
    "postcss-url": "^5.1.1",
    "sorcery": "^0.9.2",
    "uglify-js": "^2.6.2",
    "uglifyify": "^3.0.1",
    "watchify": "^3.7.0"
  }
}
